alias ..="cd .."
alias ...="cd .. && cd .."
alias ....="cd .. & cd .. & cd .."

alias h="history"
alias l="ls -CF"
alias ll="ls -l"
alias la="ls -A"
alias ss="script/server"
alias sc="script/console"
alias sg="script/generate"
alias t="todo.sh"
alias v="gvim"

