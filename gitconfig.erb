[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
	user = <%= print("Your GitHub User: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("Your GitHub Token: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
	diff = auto
	branch = auto
	status = auto
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = vim
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s
[alias]
  br = branch
  ci = commit
  cia = commit -a
  ciam = commit -am
  co = checkout
  di = diff
  dl = diff --name-status
  ds = diff --stat
  lp = log -p
  ls = log --stat
  ra = remote add
  re = remote
  rs = remote show
  st = status
  who = shortlog -s
